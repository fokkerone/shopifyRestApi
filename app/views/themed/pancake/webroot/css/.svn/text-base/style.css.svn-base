html,body{
/*    height:101%;*/
}

html{
    font-family: 'Lucida Grande', Lucida, Verdana, sans-serif;
    font-size: 1.6em;
    background-color: #F5F5F5;
}

body { overflow-y: scroll; }

.content>h1{
    margin-top: 0.4em;
}

h1,h2,h3{
    font-weight: normal;
}

h2 sup{
    font-size: 50%;
    padding-left: 10px;
    color: #777;
}

a{
    text-decoration: none;
}

pre{
    overflow-x: auto;
    background-color:#F5F5F5;
    padding: 0.5em;
    border: 1px solid #E0E0E0;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

form{
/*    float: left;*/
    display: block;
    background-color: #EDEDED;
    width: 100%;
    padding-top: 1em;
    border: 1px solid #e1e1e1;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

#flash form{
    background-color: transparent;
    border: solid 0px #000;
    margin-top: 6px;
}

#flash form input{
    background: #fff url('images/search.png') no-repeat 5px 3px;
    width: 100%;
    border-radius: 30px;
    -moz-border-radius: 30px;
    -webkit-border-radius: 30px;
    padding-left: 20px;
    padding-right: 10px;
}

.content form h3{
    clear: both;
    font-size: 1em;
    color: #777;
    text-shadow: 1px 1px 1px rgba(255,255,255,1);
    margin: 0 10px 10px 10px;
    padding-top: 20px;
}


label,
.input.radio legend{
    float: left;
    text-align: right;
	margin-right: 10px;
    font-weight: bold;
    font-size: 0.8em;
    line-height: 2em;
	width:130px;
    -webkit-user-select:none;
    -moz-user-select:none;
    color: #777;
    text-shadow: 1px 1px 1px rgba(255,255,255,1);
}


.input.radio fieldset{
    margin: 0;
    padding: 0;
    display: block;
    clear: both;    
    border: solid 0px #fff;
}

input[type=text],
input[type=password]{
/*    float: left;*/
    width: 252px;
    resize: none;
    padding: 2px 3px;
    border: 1px solid #CCCCCC !important;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

input[type=text]:focus,
input[type=password]:focus{
/*    border: 1px solid #f00 !important;*/
    -moz-box-shadow: 0 0 3px rgba(244,244,244,0.8);
    -webkit-box-shadow: 0 0 3px rgba(100,100,100,0.5);
}

select{
    margin-top: 3px;
    width: 260px;
    font-size: 0.7em;
    font-weight: normal;
}

option{
    font-weight: normal;
    padding: 1px 2px;
}

.excerpt{
    color: #888;
}

.sthl{
    color: #000;
}

/* ============================ */
/* = Standardweiten Formulare = */
/* ============================ */

.input{
    width: 410px;
}

.submit{
    text-align: right;
    padding-right: 10px;
    width: 400px;
    margin-bottom: 10px;
}

.input.checkbox{
    margin-left: 140px;
    width: 270px;
}

/* ========================== */
/* = Floating der Formulare = */
/* ========================== */

div.input,
div.submit{
    clear: both;
    display: block;    
}

div.checkbox{
    float: left;
    padding-top: 5px;
    padding-bottom: 0;
    
}

div.radio{
    width: auto;
    padding-top: 8px;
    padding-bottom: 0;
}

input[type=checkbox],
input[type=radio] {
	margin: 1px 6px 0px 0px;
	width: auto;
}

div.checkbox label {
	line-height: 1em;
	text-align: left;
	width: auto;
	margin-right: 10px;
}

div.radio label{
	line-height: 1em;
	text-align: left;
	width: auto;
    padding-top: 5px;
	margin-right: 10px;
}


/* ========== */
/* = Layout = */
/* ========== */

#header,
#footer{
    background: #000 url('images/bg.png') no-repeat center bottom;
    color: #ddd;
}

#header h1{
    font-size: 24px;
    font-weight: normal;
    padding-top: 45px;
    padding-bottom: 0px;
}

#menu{
    text-align: right;
    width: 850px;
}

#menu ul {
    float: right;
    list-style-type: none;
    padding: 0;
    margin: 0;
}

#menu ul li {
  float: left;
  padding: 0;
  margin: 0;
  padding-top: 0;
  margin-left: 2px;
}

#menu ul li a {
  display: block;
  position: relative;
  margin-top: 10px;
  height: 39px;
  line-height: 40px;
  padding: 0px 20px;
  color: #aaa;
  min-width: 56px;
  text-align: center;
  text-decoration: none;
  background: #000 url(./awsome/alert-overlay.png) repeat-x;
  border: 1px solid #333;
  border-bottom: 1px solid #333;
  border-top-right-radius: 5px;    
  border-top-left-radius: 5px;
  -moz-border-radius-topright: 5px;
  -moz-border-radius-topleft: 5px;
  -webkit-border-top-left-radius: 5px;
  -webkit-border-top-right-radius: 5px;
}

#menu ul li.active a {
    color: #000;
    background-color: rgb(230, 230, 230);
    border: 1px solid rgb(230, 230, 230);
}

#menu ul li.active a:hover {
    color: #000;
}

#menu ul li a:hover {
    color: #fff;

}

#flash{
    background-color: rgb(220, 220, 220);

}

#flash2{
	margin-left: auto;
	margin-right: auto;
    min-height: 60px;
	width: 850px;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    
    -moz-box-shadow: 0 0 30px rgba(0,0,0,0.1);
    -webkit-box-shadow: 0 0 30px rgba(0,0,0,0.1);
    background: url(./awsome/splash_back.png) no-repeat;
    background-color: rgb(230, 230, 230);
    background-position: top center;
}

#page{
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 20px;
	width: 850px;
    background-color: #fff;
    border: 1px solid #E0E0E0;
    border-top: 1px solid #fff;
    
    -moz-box-shadow: 0 0 30px rgba(0,0,0,0.1);
    -webkit-box-shadow: 0 0 30px rgba(0,0,0,0.1);
    
    
    border-bottom-right-radius: 10px;    
    border-bottom-left-radius: 10px;
    -moz-border-radius-bottomright: 10px;
    -moz-border-radius-bottomleft: 10px;
    -webkit-border-bottom-left-radius: 10px;
    -webkit-border-bottom-right-radius: 10px;
}

#footer{
    padding-top: 10px;
    padding-bottom: 10px;
    border-bottom-right-radius: 10px;    
    border-bottom-left-radius: 10px;
    -moz-border-radius-bottomright: 10px;
    -moz-border-radius-bottomleft: 10px;
    -webkit-border-bottom-left-radius: 10px;
    -webkit-border-bottom-right-radius: 10px;

}

#subtabs{
    text-align: right;
    margin: 4px 10px 0 0;
}

/* ========== */
/* = Tables = */
/* ========== */

table{
    width: 100%;
    border: 1px solid #e7e7e7;    
}

table td,
table th{
    padding: 0.1em 0.6em;
    font-size: 0.8em !important;
}

thead tr{
/*    background: #e2e2e2 url(./awsome/alert-overlay.png) repeat-x;*/
}

thead th{
    background: #e2e2e2 url(./awsome/alert-overlay.png) repeat-x;
    border-bottom: 1px solid #ACACAC;
    border-top: 1px solid #E0E0E0;
    -webkit-user-select:none;
    -moz-user-select:none;
    color: #777;
    font-weight: bold;
    text-shadow: 1px 1px 1px rgba(255,255,255,1);
}

table td{
    border-bottom: 1px solid #e7e7e7;
    vertical-align: top;
}

thead th a,
thead th a:active,
thead th a:visited,
thead th a:link{
    display: block;
    color: #515151;
}

thead th a.asc{
    background: transparent url('images/up.png') no-repeat left 4px;
    padding-left: 18px;
}

thead th a.desc{
    background: transparent url('images/down.png') no-repeat left 4px;
    padding-left: 18px;
}

th.actions,
td.actions{
    display:none;
}

thead th:hover{
    background-color: #e0e0e0;
}

tbody tr {
    background-color: #f9f9f9;
    cursor: pointer;
}

tbody tr:nth-child(2n) {
    background-color: #F2F2F2;
}

tbody td{
    padding: 0.8em 0.6em;
}

tbody tr:hover td{
    background-color: #ceddf2;
}

/* =========== */
/* = actions = */
/* =========== */

.notice{
    display: block;
    background-color: #F9E593;
    color: #623A1E;
    border: 1px solid #FDD63B;
    padding: 1em;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

.success{
    background-color: #C3EFC2;
    border: 1px solid #9DE19C;
}

.error{
    background-color: #F28B85;
    color: #000;
    border: 1px solid #E78581;
    padding: 1em;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

#flash .notice{
    z-index: 10000;
    position:absolute;
    width: 825px;
    line-height: 33px;
}

/* ============== */
/* = Pagination = */
/* ============== */

.paginator{
    font-weight: bold;
    float: right;
    text-align: right;
    font-size: 12px;
    line-height: 21px;
/*    background-color: #f00;*/
    margin-bottom: 20px;
}

.paginator span{
    display: block;
    float: left;
}

.paginator span a{
    display: block;
    color: #515151;
    float: left;
    min-width: 11px;
    text-align: center;
    position: relative;
    z-index: 98;
    height: 21px;
    padding-left: 6px;
    padding-right: 6px;
    background-color: #ededed;
    border-bottom: 1px solid #acacac;
    border-top: 1px solid #e0e0e0;
}
.paginator span a:hover{
    background-color: #e0e0e0;
}

.paginator span a.prev:hover,
.paginator span a.next:hover{
    background-color: transparent;
}

.paginator span.current{
    color: #000;
    float: left;
    min-width: 11px;
    text-align: center;
    position: relative;
    z-index: 99;
    height: 21px;
    padding-left: 6px;
    padding-right: 6px;
    background-color: #e0e0e0;
    border-bottom: 1px solid #acacac;
    border-top: 1px solid #e0e0e0;
}

.paginator .next,
.paginator .prev{
    font-size: 1px;
    height: 30px;
    line-height: 30px;
    margin: -5px;
    text-indent: -9000px;
    width: 33px;
    padding: 0;
    border: solid 0px #fff;
}

.paginator .next{
    background: transparent url('images/next.png') no-repeat 0px 5px;
}

.paginator .prev{
    background: transparent url('images/prev.png') no-repeat 0px 5px;
}

.paginator .disabled{
    background-position: 0px -94px;
}

